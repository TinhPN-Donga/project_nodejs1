<%- include('includes/header') %>
    <!-- /. NAV SIDE  -->
    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <h2>Manage Carts</h2>
                </div>
            </div>
            <!-- /. ROW  -->
            <hr />
            <div class="row">
                <div class="col-md-9 col-sm-12 col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-heading" style="display: flex;justify-content: space-between;">
                            <span style="padding-right: 2rem;">Carts</span> 
                        </div>
                        <br />
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>image</th>
                                            <th>name</th>
                                            <th>price</th>
                                            <th>date</th>
                                            <th>action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%if(carts.length !=0){%>
                                            <%for(var i=0; i < carts.length; i++){%>
                                                <tr>
                                                    <td>
                                                        <%= skip+i+1%>
                                                    </td>
                                                    <td><img src=<%=carts[i].product.image ?
                                                            `/uploads/${carts[i].product.image}`: "https://static.thenounproject.com/png/4974686-200.png"
                                                            %>
                                                        alt="" width="50"></td>
                                                    <td>
                                                        <%= carts[i].product.name%>
                                                    </td>
                                                    <td>$<%= carts[i].product.price%>
                                                    </td>
                                                    <!-- function format date -->
                                                    <%function formatDatetime(datetime){const inputDate = new Date(datetime);/*inputDate.setHours(inputDate.getHours() + 7);*/const day = ('0' + inputDate.getDate()).slice(-2);const month = ('0' + (inputDate.getMonth() + 1)).slice(-2);const year = inputDate.getFullYear();const hours = ('0' + inputDate.getHours()).slice(-2);const minutes = ('0' + inputDate.getMinutes()).slice(-2);const formattedDate = `${hours}:${minutes} ${day}/${month}/${year}`;return formattedDate;}%>
                                                    <td>
                                                        <%= formatDatetime(carts[i].createdAt)%>
                                                    </td>
                                                    <td><a class="btn btn-info"
                                                            href="/dashboard/products/detail/<%=carts[i].product._id%>">detail</a>
                                                    </td>
                                                </tr>
                                                <%}%>
                                                    <%}else{%>
                                                        <tr>
                                                            <td colspan="5" style="text-align: center;">No data</td>
                                                        </tr>
                                                        <%}%>
                                    </tbody>
                                </table>
                            </div>
                            <div style="display: flex; justify-content: end;">
                                <%if(countCarts > 5){%>
                                    <%for(let i = 0; i < countCarts/5; i++){%>
                                        <%if(i == skip/5){%>
                                            <p><%= i+1%></p>
                                        <%}else{%>
                                            <a href="/dashboard/manage-carts?skip=<%=i+1%>" style="padding: 0 0.5rem;"><%=i+1%></a>
                                        <%}%>
                                    <%}%>    
                                <%}%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('includes/footer') %>