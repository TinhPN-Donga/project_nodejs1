<%- include('includes/header') %>
    <!-- /. NAV SIDE  -->
    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <h2>Manage Product</h2>
                </div>
            </div>
            <!-- /. ROW  -->
            <hr />
            <div class="row">
                <div class="col-md-9 col-sm-12 col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <span>Products</span>
                        </div>
                        <br />
                        <span style="padding-left: 1.6rem;">
                            <a href="/dashboard/create-product" class="btn btn-success">create</a>
                        </span>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>image</th>
                                            <th>name</th>
                                            <th>price</th>
                                            <th>action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%if(products.length !=0){%>
                                            <%for(var i=0; i < products.length; i++){%>
                                                <tr>
                                                    <td>
                                                        <%= skip+i+1%>
                                                    </td>
                                                    <td><img src=<%=products[i].image ?
                                                            `http://localhost:3000/uploads/${products[i].image}`: "https://static.thenounproject.com/png/4974686-200.png" %>
                                                        alt="" width="50"></td>
                                                    <td>
                                                        <%= products[i].name%>
                                                    </td>
                                                    <td>$<%= products[i].price%>
                                                    </td>
                                                    <td><a class="btn btn-info"
                                                            href="/dashboard/products/detail/<%=products[i]._id%>">detail</a>
                                                        | <a class="btn btn-primary"
                                                            href="/dashboard/products/edit/<%=products[i]._id%>">edit</a>
                                                        | <a class="btn btn-danger"
                                                            onclick="confirmAndDelete('<%= products[i]._id %>')">Delete</a>
                                                    </td>
                                                </tr>
                                                <script>
                                                    function confirmAndDelete(productId) {
                                                        const isConfirmed = confirm('Do you want to delete this product?');
                                                        if (isConfirmed) {
                                                            const deleteUrl = '/dashboard/products/delete/' + productId;
                                                            fetch(deleteUrl, {
                                                                method: 'DELETE',
                                                                headers: {
                                                                    'Content-Type': 'application/json',
                                                                },
                                                            })
                                                                .then(response => {
                                                                    if (response.ok) {
                                                                        window.location.href = '/dashboard/manage-products';
                                                                    } else {
                                                                        alert('Delete product failed!!!');
                                                                    }
                                                                })
                                                                .catch(error => {
                                                                    alert('Delete product failed!!!');
                                                                });
                                                        }
                                                    }
                                                </script>
                                                <%}%>
                                                    <%}else{%>
                                                        <tr>
                                                            <td colspan="5" style="text-align: center;">No data</td>
                                                        </tr>
                                                        <%}%>
                                    </tbody>
                                </table>
                            </div>
                            
                            <div style="display: flex; justify-content: end;">
                                <%if(countProducts > 5){%>
                                    <%for(let i = 0; i < countProducts/5; i++){%>
                                        <%if(i == skip/5){%>
                                            <p><%= i+1%></p>
                                        <%}else{%>
                                            <a href="/dashboard/manage-products?skip=<%=i+1%>" style="padding: 0 0.5rem;"><%=i+1%></a>
                                        <%}%>
                                    <%}%>    
                                <%}%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('includes/footer') %>