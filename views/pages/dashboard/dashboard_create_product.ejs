<%- include('includes/header') %>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">
                        <h2>Create Product</h2>
                    </div>
                </div>
                <!-- /. ROW  -->
                <hr />
                <form action="/dashboard/create-product" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                      <label for="name">Name *</label>
                      <input type="text" name="name" class="form-control" id="name" placeholder="Name..." required>
                    </div>
                    <br>
                    <div class="form-group">
                      <label for="description">Description *</label>
                      <input type="text" name="description" class="form-control" id="description" placeholder="Description" required>
                    </div>
                    <br>
                    <div class="form-group">
                        <label for="price">Price *</label>
                        <input type="number" name="price" class="form-control" id="price" placeholder="Price: 3, 4, 5$" required>
                      </div>
                      <br>
                    <div class="form-group">
                        <label for="image">Image</label>
                        <input type="file" name="image"  class="form-control" id="image" placeholder="---Image---" accept="image/*" required>
                      </div>
                    <br>
                    <button type="submit" class="btn btn-primary" id="btn">Submit</button>
                </form>
            </div>
        </div>
        <script>
            const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('error')) {
      alert(`error: ${urlParams.get('error')}`);
    }
        </script>
<%- include('includes/footer') %>