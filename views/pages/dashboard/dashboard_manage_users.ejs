<%- include('includes/header') %>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">
                        <h2>Manage Users</h2>
                    </div>
                </div>
                <!-- /. ROW  -->
                <hr />
                <div class="row">
                    <div class="col-md-9 col-sm-12 col-xs-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                User
                            </div>
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Name</th>
                                                <th>Email</th>
                                                <th>Role</th>
                                                <th>Phone</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <%for(var i = 0; i < users.length; i++){%>
                                                <tr>
                                                    <td><%= i+1%></td>
                                                    <td><%= users[i].fullName%></td>
                                                    <td><%= users[i].email%></td>
                                                    <td style="color: <%= users[i].role == "admin" ? "red" : "black"%>;"><%= users[i].role%></td>
                                                    <td><%= users[i].phone ? users[i].phone:"chưa có" %></td>
                                                </tr>
                                                <%}%>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div
            </div>
        </div>
<%- include('includes/footer') %>